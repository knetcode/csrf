{
  "name": "@knetcode/csrf",
  "version": "0.0.1",
  "description": "A simple CSRF token middleware for Next.js",
  "type": "module",
  "main": "dist/server.js",
  "module": "dist/server.js",
  "types": "dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "sideEffects": false,
  "keywords": [
    "nextjs",
    "csrf",
    "middleware"
  ],
  "author": "Kyle Esterhuizen",
  "license": "MIT",
  "peerDependencies": {
    "next": ">=13.4.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "rimraf": "^6.0.1",
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2"
  }
}